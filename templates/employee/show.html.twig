{% extends 'base.html.twig' %}

{% block title %}Détails de l'employé
{% endblock %}

{% block body %}
	<div class="container mt-4">
		<h1>Détails de l'employé</h1>

		<div class="card">
			<div class="card-body">
				<table class="table">
					<tbody>
						<tr>
							<th>ID</th>
							<td>{{ employee.id }}</td>
						</tr>
						<tr>
							<th>Nom</th>
							<td>{{ employee.name }}</td>
						</tr>
						<tr>
							<th>Email</th>
							<td>{{ employee.email }}</td>
						</tr>
						<tr>
							<th>Statut</th>
							<td>
								{% if employee.active %}
									<span class="badge bg-success">Actif</span>
								{% else %}
									<span class="badge bg-danger">Inactif</span>
								{% endif %}
							</td>
						</tr>
						<tr>
							<th>Restaurant</th>
							<td>{{ employee.restaurant.name }}</td>
						</tr>
						<tr>
							<th>Date de création</th>
							<td>{{ employee.createdAt ? employee.createdAt|date('Y-m-d H:i:s') : '' }}</td>
						</tr>
						<tr>
							<th>Dernière mise à jour</th>
							<td>{{ employee.updatedAt ? employee.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
						</tr>
					</tbody>
				</table>
			</div>
		</div>

		<div class="mt-3">
			<a href="{{ path('app_employee_edit', {'id': employee.id}) }}" class="btn btn-warning">Modifier</a>
			<a href="{{ path('app_employee_index') }}" class="btn btn-secondary">Retour à la liste</a>
		</div>
	</div>
{% endblock %}
