{% extends 'base.html.twig' %}

{% block title %}Restaurants - Mongoo
{% endblock %}

{% block body %}
	<div class="container mt-4">
		<div class="d-flex justify-content-between align-items-center mb-4">
			<h1 style="color: var(--primary-color);">Liste des restaurants</h1>
			{% if is_granted('ROLE_USER') %}
				<a href="{{ path('app_restaurant_new') }}" class="btn btn-primary">
					<i class="fas fa-plus"></i>
					Nouveau restaurant
				</a>
			{% endif %}
		</div>

		{% for message in app.flashes('success') %}
			<div class="alert alert-success">
				{{ message }}
			</div>
		{% endfor %}

		<div class="row">
			{% for restaurant in restaurants %}
				<div class="col-md-4 mb-4">
					<div class="card h-100">
						<div class="card-body">
							<h5 class="card-title" style="color: var(--primary-color);">{{ restaurant.name }}</h5>
							<p class="card-text">
								<strong>Adresse :</strong>
								{{ restaurant.address }}<br>
								<strong>Ville :</strong>
								{{ restaurant.city }}
								({{ restaurant.postalCode }})<br>
								<strong>Téléphone :</strong>
								{{ restaurant.phone }}
							</p>
							{% if restaurant.description %}
								<p class="card-text">{{ restaurant.description }}</p>
							{% endif %}
						</div>
						<div class="card-footer bg-transparent">
							<div class="btn-group w-100">
								<a href="{{ path('app_restaurant_show', {'id': restaurant.id}) }}" class="btn btn-outline-primary">
									<i class="fas fa-eye"></i>
									Voir
								</a>
								{% if is_granted('ROLE_USER') %}
									<a href="{{ path('app_restaurant_edit', {'id': restaurant.id}) }}" class="btn btn-outline-secondary">
										<i class="fas fa-edit"></i>
										Modifier
									</a>
									<form method="post" action="{{ path('app_restaurant_delete', {'id': restaurant.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce restaurant ?');" class="d-inline">
										<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ restaurant.id) }}">
										<button class="btn btn-outline-danger">
											<i class="fas fa-trash"></i>
											Supprimer
										</button>
									</form>
								{% endif %}
							</div>
						</div>
					</div>
				</div>
			{% else %}
				<div class="col-12">
					<div class="alert alert-info">
						Aucun restaurant trouvé.
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}
