<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Mongoo - Administration
			{% endblock %}
		</title>
		<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">

		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
		<link href="/css/style.css" rel="stylesheet"> {% block stylesheets %}{% endblock %}
		</head>
		<body>
			<nav class="navbar navbar-expand-lg">
				<div class="container">
					<a class="navbar-brand" href="/">
						<img src="/image.png" alt="Mongoo Logo">
					</a>
					<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
						<span class="navbar-toggler-icon"></span>
					</button>
					<div class="collapse navbar-collapse" id="navbarNav">
						<ul class="navbar-nav ms-auto">
							<li class="nav-item">
								<a class="nav-link" href="/restaurant">Restaurants</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="/employee">Employés</a>
							</li>
						</ul>
					</div>
				</div>
			</nav>

			<div class="container my-4">
				{% for message in app.flashes('success') %}
					<div class="alert alert-success">
						{{ message }}
					</div>
				{% endfor %}

				{% for message in app.flashes('error') %}
					<div class="alert alert-danger">
						{{ message }}
					</div>
				{% endfor %}

				{% block body %}{% endblock %}
			</div>

			<footer class="footer">
				<div class="container">
					<div class="row">
						<div class="col-md-6">
							<h5>Mongoo Administration</h5>
							<p>Gestion des restaurants et des employés</p>
						</div>
						<div class="col-md-6 text-end">
							<img src="/image.png" alt="Mongoo Logo" style="height: 40px;">
						</div>
					</div>
				</div>
			</footer>

			<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
			{% block javascripts %}{% endblock %}
		</body>
	</html>
